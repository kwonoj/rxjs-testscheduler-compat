{
  "name": "@kwonoj/rxjs-testscheduler-compat",
  "version": "0.0.4",
  "description": "RxJS v4 TestScheduler interface for RxJS v5",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/validate-commit-msg/index.js",
      "pre-commit": "npm run lint:staged"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ]
    }
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "lint-staged": {
    "*.@(ts)": "tslint"
  },
  "scripts": {
    "prepublish": "shx rm -rf ./typings && typings install && npm run build",
    "test": "npm-run-all build:clean && mocha --reporter nyan --compilers ts:ts-node/register --recursive --bail spec",
    "test:cover": "nyc --reporter=lcov --reporter=html npm test",
    "lint": "tslint src/**/*.ts spec/**/*.ts",
    "lint:staged": "lint-staged",
    "build": "npm-run-all build:clean && tsc",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/rxjs-testscheduler-compat.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/rxjs-testscheduler-compat/issues"
  },
  "homepage": "https://github.com/kwonoj/rxjs-testscheduler-compat#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "commitizen": "^2.8.6",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^1.3.2",
    "lint-staged": "^3.0.3",
    "lodash": "^4.16.2",
    "mocha": "^3.1.0",
    "npm-run-all": "^3.1.0",
    "nyc": "^10.0.0",
    "rxjs": "^5.0.0-beta.12",
    "shx": "^0.2.0",
    "ts-node": "^1.4.0",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3",
    "typings": "^2.0.0",
    "validate-commit-msg": "^2.8.0"
  },
  "peerDependencies": {
    "rxjs": "^5.0.0-beta.12"
  }
}
